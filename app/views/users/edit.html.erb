<% provide(:title, "Edit user") %>

	<h1>Update your profile, <%= @user.email %>!</h1>

	<div class="row">
	  <div class="col-md-6 col-md-offset-3">
	    <%= form_for(@user) do |f| %>
	      <%= f.label :email %>
	      <%= f.email_field :email %>
			<br><br>
	    	<textarea rows="4" cols="15"> Blurb about yourself.</textarea>
			<br><br>
	      <%= f.submit "Save changes", class: "btn btn-primary" %>
	    <% end %>
	

	  </div>
	</div>

<br><br>
<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>